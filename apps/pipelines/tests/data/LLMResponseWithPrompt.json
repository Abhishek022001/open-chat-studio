{
  "description": "Calls an LLM with a prompt",
  "properties": {
    "llm_provider_id": {
      "type": "integer",
      "ui:widget": "llm_provider_model"
    },
    "llm_provider_model_id": {
      "type": "integer",
      "ui:widget": "none"
    },
    "llm_temperature": {
      "exclusiveMinimum": 0.0,
      "maximum": 2.0,
      "type": "number",
      "default": 1.0
    },
    "history_type": {
      "enum": [
        "node",
        "named",
        "global",
        "none"
      ],
      "title": "PipelineChatHistoryTypes",
      "type": "string",
      "default": "none",
      "ui:enumLabels": [
        "Node History",
        "Named History",
        "Global History",
        "No History"
      ],
      "ui:widget": "history"
    },
    "history_name": {
      "default": null,
      "title": "History Name",
      "type": "string",
      "ui:widget": "none"
    },
    "source_material_id": {
      "type": "integer",
      "default": null,
      "ui:optionsSource": "source_material",
      "ui:widget": "select"
    },
    "prompt": {
      "type": "string",
      "default": "You are a helpful assistant. Answer the user's query as best you can",
      "ui:widget": "expandable_text"
    }
  },
  "required": [
    "llm_provider_id",
    "llm_provider_model_id"
  ],
  "title": "LLMResponseWithPrompt",
  "type": "object",
  "ui:label": "LLM response with prompt"
}